    "start": "node dist/server/main.js",
    "dev": "npm run build && npm run watch",
    "test-ci": "npm test",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest \"\\.spec\\.ts\"",
    "test-integrations": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest \"\\.integration\\.ts\" --runInBand --ci --watchAll=false --forceExit",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "29.5.12",
    "eslint-config-custom": "workspace:*",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "nock": "13.5.4",
    "nodemon": "3.1.0",
    "supertest": "7.0.0",
    "ts-jest": "29.1.2",
    "tsconfig": "workspace:*"
  },
  "dependencies": {
    "@keyv/redis": "2.8.4",
    "@pocket-tools/apollo-utils": "workspace:*",
    "@pocket-tools/sentry": "workspace:*",
    "@pocket-tools/tracing": "workspace:*",
    "@pocket-tools/ts-logger": "workspace:*",
    "axios": "1.6.8",
    "axios-retry": "4.1.0",
