{
  "name": "annotations-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc && npm run build-schema",
    "watch": "concurrently  --names \"CodeGen,TS,Nodemon\" -c \"bgYellow,bgBlue,bgMagenta\" \"graphql-codegen --watch 'src/**/*.ts'\"  \"tsc -w --preserveWatchOutput\" \"nodemon  --config ../../nodemon.json ./dist/main.js\"",
    "start": "node dist/main.js",
    "dev": "npm run build && npm run watch",
    "build-schema": "node dist/server/apollo/buildSchema.js",
    "test:watch": "npm test -- --watchAll",
    "test": "jest \"\\.spec\\.ts\"",
    "test-integrations": "jest \"\\.integration\\.ts\" --runInBand",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\"",
    "prebuild": "graphql-codegen"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/datasource-rest": "^6.2.2",
    "@aws-sdk/client-dynamodb": "3.569.0",
    "@aws-sdk/client-sqs": "3.569.0",
    "@aws-sdk/lib-dynamodb": "3.569.0",
    "@pocket-tools/apollo-utils": "workspace:*",
    "@pocket-tools/sentry": "workspace:*",
    "@pocket-tools/tracing": "workspace:*",
    "@pocket-tools/ts-logger": "workspace:*",
    "cors": "2.8.5",
    "dataloader": "2.2.2",
    "exponential-backoff": "^3.1.1",
    "express": "4.19.2",
    "express-validator": "^7.0.1",
    "graphql-constraint-directive": "5.4.2",
    "knex": "3.1.0",
    "luxon": "3.4.4",
    "mysql2": "3.9.7",
    "nanoid": "3.3.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@sentry/types": "7.113.0",
    "@types/chance": "1.1.6",
    "@types/jest": "29.5.12",
    "@types/uuid": "9.0.8",
    "chance": "1.1.11",
    "eslint-config-custom": "workspace:*",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "nock": "13.5.4",
    "nodemon": "3.1.0",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "tsconfig": "workspace:*"
  },
  "files": [
    "dist",
    "schema.graphql",
    "package.json"
  ]
}
