    "@pocket-tools/tracing": "workspace:*",
    "@pocket-tools/ts-logger": "workspace:*",
    "dataloader": "2.2.2",
    "express": "4.19.2",
    "knex": "3.1.0",
    "luxon": "3.4.4",
    "mysql2": "3.9.7",
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@pocket-tools/eslint-config": "workspace:*",
    "@sentry/types": "7.113.0",
    "@types/jest": "29.5.12",
    "@types/node": "^20.12.6",
    "@types/supertest": "^6.0.2",
    "jest": "29.7.0",
    "jest-mock-req-res": "1.0.2",
    "nock": "13.5.4",
    "nodemon": "3.1.0",
