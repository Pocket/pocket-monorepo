{
  "name": "user-api",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w --preserveWatchOutput & nodemon --config ../../nodemon.json",
    "start": "node dist/main.js",
    "dev": "npm run build && NODE_ENV=development npm run watch",
    "test": "jest \"\\.spec\\.ts\"",
    "test-integrations": "jest \"\\.integration\\.ts\" --runInBand",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\""
  },
  "dependencies": {
    "@pocket-tools/apollo-utils": "workspace:*",
    "@aws-sdk/client-eventbridge": "3.490.0",
    "@aws-sdk/client-pinpoint": "3.490.0",
    "@pocket-tools/ts-logger": "workspace:*",
    "@pocket-tools/tracing": "workspace:*",
    "@sentry/node": "7.94.1",
    "@sentry/tracing": "7.94.1",
    "dataloader": "2.2.2",
    "express": "4.18.2",
    "knex": "3.1.0",
    "lodash": "4.17.21",
    "luxon": "3.4.4",
    "mysql2": "3.6.5",
    "underscore.string": "3.3.6"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "@sentry/types": "7.94.1",
    "@faker-js/faker": "8.3.1",
    "@types/jest": "29.5.11",
    "@types/supertest": "^2.0.16",
    "jest": "29.7.0",
    "jest-mock-req-res": "1.0.2",
    "nock": "13.4.0",
    "nodemon": "3.0.2",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1"
  },
  "files": [
    "dist",
    "schema.graphql",
    "package.json"
  ]
}
