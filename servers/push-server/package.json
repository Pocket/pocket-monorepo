{
  "name": "push-server",
  "version": "1.0.0",
  "private": true,
  "description": "Push notification server",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pocket/pocket-monorepo"
  },
  "license": "BSD",
  "author": "",
  "main": "dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "npm run build && npm run watch",
    "format": "eslint --fix",
    "lint": "eslint --fix-dry-run",
    "start": "node -r dotenv/config dist/index.js",
    "test-integrations": "jest \"\\.integration\\.ts\" --runInBand --forceExit",
    "test:watch": "npm test -- --watchAll",
    "watch": "tsc -w --preserveWatchOutput & nodemon --config ../../nodemon.json"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "3.577.0",
    "@sentry/node": "7.116.0",
    "apns2": "11.7.0",
    "dotenv": "16.4.5",
    "firebase-admin": "^12.0.0",
    "lodash": "4.17.21",
    "tslib": "2.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@pocket-tools/eslint-config": "workspace:*",
    "@types/jest": "29.5.12",
    "@types/node": "^20.12.6",
    "@types/node-gcm": "^1.0.5",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig": "workspace:*",
    "typescript": "5.4.4"
  }
}
