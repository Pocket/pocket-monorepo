{
  "name": "v3-proxy-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w --preserveWatchOutput & nodemon --config ../../nodemon.json",
    "start": "node dist/main.js",
    "dev": "npm run build && npm run watch",
    "test": "jest \"\\.spec\\.ts\" --runInBand",
    "test-integrations": "jest \"\\.integration\\.ts\" --runInBand --force-exit",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\"",
    "prebuild": "echo 'renable this once we can depth limit... graphql-codegen --max-depth 3'"
  },
  "dependencies": {
    "@pocket-tools/apollo-utils": "workspace:*",
    "@sentry/node": "7.99.0",
    "@sentry/tracing": "7.99.0",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "5.0.2",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typed-document-node": "5.0.4",
    "@graphql-codegen/typescript": "4.0.4",
    "@graphql-codegen/typescript-operations": "4.1.2",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "@types/chai": "4.3.1",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/supertest": "^6.0.2",
    "chai": "4.3.6",
    "jest": "29.7.0",
    "nock": "13.5.0",
    "nodemon": "3.0.3",
    "sinon": "^11.1.2",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2"
  }
}
