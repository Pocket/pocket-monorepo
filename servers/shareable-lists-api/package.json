{
  "name": "shareable-lists-api",
  "main": "dist/main.js",
  "prisma": {
    "seed": "ts-node --emit=false prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run export-local-env && rm -rf dist && npm run generate && tsc && npm run build-schema-admin && npm run build-schema-public",
    "watch": "tsc -w & nodemon",
    "start": "npm run migrate:deploy && node dist/main.js",
    "start:dev": "npm run migrate:deploy && npm run build && npm run watch",
    "test": "jest \"\\.spec\\.ts\"",
    "test:watch": "npm test -- --watchAll",
    "test-integrations": "npm run export-local-env && npm run migrate:reset -- --skip-seed --force && jest \"\\.integration\\.ts\" --runInBand",
    "test-integrations:local": "jest \"\\.integration\\.ts\" --runInBand",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\"",
    "build-schema-admin": "node dist/admin/buildSchema.js",
    "build-schema-public": "node dist/public/buildSchema.js",
    "db:generate-client": "prisma generate",
    "export-env": "export $(egrep -v '^#' .env | xargs -0)",
    "export-local-env": "export $(egrep -v '^#' .env.local | xargs -0)",
    "migrate:dev": "npm run export-env && prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@pocket-tools/apollo-utils": "workspace:*",
    "@pocket-tools/ts-logger": "workspace:*",
    "@prisma/client": "4.12.0",
    "@sentry/node": "7.93.0",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-validator": "^7.0.1",
    "graphql-constraint-directive": "5.3.0",
    "keyv": "4.5.4",
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "@faker-js/faker": "8.3.1",
    "@types/jest": "29.5.11",
    "@types/node": "^20.11",
    "dotenv": "16.3.1",
    "jest": "29.7.0",
    "nodemon": "3.0.2",
    "prisma": "^4.12.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "jest-extended": "4.0.2"
  },
  "files": [
    "dist",
    "schema-admin.graphql",
    "schema-public.graphql",
    "schema-shared.graphql",
    "package.json"
  ]
}
