{
  "name": "braze-content-proxy",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w & nodemon",
    "start": "node dist/main.js",
    "dev": "npm run build && npm run watch",
    "test:watch": "npm test -- --watchAll",
    "test": "jest \"\\.spec\\.ts\"",
    "test-integrations": "jest \"\\.integration\\.ts\" --forceExit",
    "format": "eslint --fix",
    "lint": "eslint --fix-dry-run"
  },
  "dependencies": {
    "@apollo/client": "3.7.17",
    "@sentry/node": "8.26.0",
    "aws-xray-sdk-express": "3.5.1",
    "cross-fetch": "4.0.0",
    "dataloader": "2.2.2",
    "express": "4.19.2",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@pocket-tools/eslint-config": "workspace:*",
    "@types/jest": "29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "nock": "14.0.0-beta.11",
    "nodemon": "3.1.4",
    "supertest": "7.0.0",
    "ts-jest": "29.2.4",
    "ts-node": "10.9.2",
    "tsconfig": "workspace:*"
  }
}
