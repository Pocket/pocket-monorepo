{
  "$schema": "https://unpkg.com/syncpack@12.3.0/dist/schema.json",
  "dependencyTypes": [
    "dev",
    "peer",
    "prod",
    "nodeEngine"
  ],
  "customTypes": {
    "nodeEngine": {
      "path": "engines.node",
      "strategy": "version"
    }
  },
  "versionGroups": [
    {
      "dependencies": [
        "@aws-sdk/**"
      ],
      "label": "AWS SDK Dependencies should all have the same version"
    },
    {
      "dependencies": [
        "@sentry/**"
      ],
      "label": "Sentry Dependencies should all have the same version"
    },
    {
      "dependencies": [
        "@types/**"
      ],
      "dependencyTypes": [
        "!dev"
      ],
      "isBanned": true,
      "label": "@types packages should only be under devDependencies",
      "packages": [
        "!tsconfig"
      ]
    },
    {
      "dependencies": [
        "nock"
      ],
      "label": "Nock should be the same version except for lambda-secrets because of native fetch",
      "packages": [
        "!@pocket-tools/lambda-secrets"
      ]
    }
  ]
}