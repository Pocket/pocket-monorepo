{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "dom"
    ],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
