{
  "name": "@pocket-tools/aws-utils",
  "version": "0.0.0-development",
  "description": "Repository for shared code using AWS infrastructure",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocket/pocket-monorepo.git"
  },
  "license": "Apache-2.0",
  "author": "",
  "type": "module",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf node_modules dist",
    "dev": "pnpm run build --watch",
    "format": "eslint --fix",
    "lint": "eslint --fix-dry-run",
    "presemantic-release": "pnpm run build",
    "semantic-release": "semantic-release",
    "test": "jest",
    "test-integrations": "jest \"\\.integration\\.ts\" --forceExit",
    "test:watch": "pnpm run test -- --watch"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-monorepo",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      [
        "@semantic-release/exec",
        {
          "analyzeCommitsCmd": "pnpm version ${lastRelease.version} --git-tag-version=false > /dev/null 2>&1 || true",
          "prepareCmd": "pnpm version ${nextRelease.version} --git-tag-version=false",
          "publishCmd": "pnpm publish --no-git-checks"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.716.0",
    "@aws-sdk/client-sqs": "3.716.0",
    "@aws-sdk/lib-storage": "3.716.0",
    "@aws-sdk/s3-request-presigner": "3.716.0",
    "@pocket-tools/event-bridge": "workspace:*",
    "@pocket-tools/ts-logger": "workspace:*",
    "@sentry/node": "8.47.0",
    "@smithy/node-http-handler": "3.2.0",
    "adm-zip": "0.5.16",
    "archiver": "^7.0.1",
    "csv-stringify": "^6.5.1"
  },
  "devDependencies": {
    "@pocket-tools/eslint-config": "workspace:*",
    "@semantic-release/exec": "6.0.3",
    "@smithy/types": "3.5.0",
    "@types/adm-zip": "0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/jest": "29.5.14",
    "@types/morgan": "1.9.9",
    "@types/node": "^22.10.7",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "semantic-release": "24.2.1",
    "semantic-release-monorepo": "8.0.2",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsconfig": "workspace:*",
    "tsup": "8.3.5",
    "typescript": "5.7.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
