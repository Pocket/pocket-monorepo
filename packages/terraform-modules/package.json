{
  "name": "@pocket-tools/terraform-modules",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "type": "module",
  "license": "MPL-2.0",
  "scripts": {
    "build:dev": "rm -rf dist && NODE_ENV=development npm run synth",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "example:synth": "cdktf synth",
    "compile": "tsc --pretty",
    "test:watch": "npm test -- --watch --watch-extensions ts -R min --watch-files src",
    "test": "jest --ci --maxWorkers=4 --logHeapUsage",
    "lint": "eslint --fix-dry-run \"src/**/*.ts\"",
    "format": "eslint --fix \"src/**/*.ts\"",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@cdktf/provider-archive": "10.0.1",
    "@cdktf/provider-aws": "19.10.0",
    "@cdktf/provider-local": "10.1.0",
    "@cdktf/provider-newrelic": "12.3.0",
    "@cdktf/provider-null": "10.0.0",
    "@cdktf/provider-pagerduty": "13.5.0",
    "@cdktf/provider-time": "10.1.0",
    "cdktf": "0.20.4",
    "cdktf-cli": "0.20.4",
    "constructs": "10.3.0",
    "parse-domain": "5.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint-config-custom": "workspace:*",
    "jest": "29.7.0",
    "semantic-release": "23.0.3",
    "semantic-release-monorepo": "8.0.2",
    "ts-jest": "29.1.2",
    "tsconfig": "workspace:*"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocket/pocket-monorepo.git"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
