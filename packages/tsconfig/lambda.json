{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "ES2024",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowImportingTsExtensions": true,
      "rewriteRelativeImportExtensions": true,
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "noEmitHelpers": true,
      "importHelpers": true,
      "removeComments": true,
      "strictNullChecks": true
    }
}