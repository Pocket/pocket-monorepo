{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": true,
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "noEmitHelpers": true,
      "importHelpers": true,
      "removeComments": true
    }
}