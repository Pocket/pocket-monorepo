{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "packages/tsconfig/**"],
  "globalDotEnv": [".env", ".env.example"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "synth": {
      "dependsOn": ["^build"],
      "outputs": ["cdktf.out/**"]
    },
    "lint": {},
    "format": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "test-integrations": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}