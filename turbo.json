{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "packages/tsconfig/**"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "format": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "test-integrations": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"]
    }
  }
}